/* pages/welcome/welcome.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color:#ffff;
    height: 100%;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
    border-radius: 50%;
}

.nickname {
    margin-top: 100rpx;
    font-size: 40rpx;
}

.introduction {
    margin-top: 200rpx;
    border: 3px solid white;
    padding: 20rpx 30rpx;
    border-radius: 30rpx;
}

.introduction text {
    font-size: 26rpx;
    color: #333;
}
.music{
  width: 60rpx;
  height: 60rpx;
  /* border: 1px solid #fff; */
  margin-top: 20rpx;
  align-self:flex-start;
  margin-left: 20rpx;
  animation: rotate 3s linear infinite;
  /* border-radius: 50%; */
}
@keyframes rotate{
  from{transform: rotate(0deg)}
  to{transform: rotate(360deg)}
}